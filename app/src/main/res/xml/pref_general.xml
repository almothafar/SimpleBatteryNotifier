<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Display"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="@string/_pref_value_temperatures_unit_c"
            android:entries="@array/preference_list_temperatures"
            android:entryValues="@array/preference_list_temperatures_values"
            android:key="@string/_pref_key_temperatures_unit"
            android:summary="%s"
            android:title="@string/preference_title_temperature"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Battery Level Thresholds"
        app:iconSpaceReserved="false">

        <SeekBarPreference
            android:defaultValue="40"
            android:key="@string/_pref_key_warn_battery_level"
            android:min="30"
            android:max="50"
            android:title="@string/warn_start_level"
            style="@style/PreferenceSeekBar"
            app:showSeekBarValue="true"
            app:adjustable="true"
            app:iconSpaceReserved="false" />

        <SeekBarPreference
            android:defaultValue="20"
            android:key="@string/_pref_key_critical_battery_level"
            android:min="10"
            android:max="20"
            android:title="@string/alert_start_level"
            style="@style/PreferenceSeekBar"
            app:showSeekBarValue="true"
            app:adjustable="true"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Other Settings"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/_pref_key_notifications_apply_silent_mode"
            android:summaryOff="@string/notifications_apply_silent_mode_summary_off"
            android:summaryOn="@string/notifications_apply_silent_mode_summary_on"
            android:switchTextOff="@string/off"
            android:switchTextOn="@string/on"
            android:title="@string/notifications_apply_silent_mode"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>
